@page
@model RestaurantBooking_Razor.Pages.AnnouncePage.PostAnnouncementModel
@{
    Layout = "../Shared/AdminLayout.cshtml";
}

<h2>Post Announcement</h2>
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="announcementAddModel.Title"></label>
        <input class="form-control" asp-for="announcementAddModel.Title" />
        <span asp-validation-for="announcementAddModel.Title" style="color:red"></span>
    </div>

    <div class="form-group">
        <label asp-for="announcementAddModel.Description"></label>
        <textarea class="form-control" asp-for="announcementAddModel.Description"></textarea>
        <span asp-validation-for="announcementAddModel.Description" style="color:red"></span>
    </div>
    <!--<div class="form-group">
        <article><b>Upload image if any</b></article> <br />-->
    @*<label asp-for="res.Image"></label><br />*@
    <!--<input type="file" asp-for="announcementAddModel.Image" />
        <span asp-validation-for="announcementAddModel.Image" style="color:red"></span>
    </div>-->


    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Post</button>
    </div>
</form>
@section scripts{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
